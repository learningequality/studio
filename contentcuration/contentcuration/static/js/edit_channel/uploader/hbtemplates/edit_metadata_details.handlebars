{{#if none_selected}}
	<div id="uploader-default-prompt" class="text-center container-fluid">{{formatMessage (intlGet 'messages.select_prompt')}}</div>
{{else}}
	{{#unless node}}
		<h5 id="uploader-count-message">{{formatMessage (intlGet 'messages.selected_count') count=selected_count}}</h5>
		{{#unless isoriginal}}<p class="text-center uploader-copied-warning"><i>{{formatMessage (intlGet 'messages.detected_import')}}</i></p>{{/unless}}
	{{/unless}}
	{{#if node}}
		<div id="editmetadata_format_section"></div>
		<hr/>
		<br/>
		<h4>{{formatMessage (intlGet 'messages.title')}}</h4>
		<p class="detail_field wordwrap">{{#if node.title}}{{node.title}}{{else}}<span class="default_detail_field">---</span>{{/if}}</p>
	{{/if}}
		<h4>{{formatMessage (intlGet 'messages.language')}}</h4>
		<p class="wordwrap">{{language}}</p>
		<br/>
	{{#if is_exercise}}
		<h4>{{formatMessage (intlGet 'messages.mastery_criteria')}} <span class="glyphicon glyphicon glyphicon-info-sign tab_item" aria-hidden="true" id="mastery_about"></span></h4>
		<p class="detail_field" id="mastery_detail_field">{{#if mastery}}{{#translate mastery}}{{/translate}}{{else}}<span class="default_detail_field">---</span>{{/if}}</p>
	{{/if}}
	{{#if is_file}}
		<hr/>
		{{#unless isoriginal}}<p class="uploader-copied-warning">{{formatMessage (intlGet 'messages.source')}} <a href="/channels/{{node.original_channel.id}}/view/{{node.original_source_node_id}}" target="_blank" title="{{node.original_channel.name}}" class="original_channel_link"><b>{{node.original_channel.name}}</b></a></p>{{/unless}}
		<div class="row">
			<div class="col-xs-3  text-center">
				<h4>{{formatMessage (intlGet 'messages.author')}}</h4>
				<p class="detail_field wordwrap text-center">{{#if author}}{{author}}{{else}}<span class="default_detail_field">---</span>{{/if}}</p>
			</div>
			<div class="col-xs-5  text-center">
				<h4>{{formatMessage (intlGet 'messages.license')}}</h4>
				<p class="detail_field">
					<span id="license_detail_field">{{#if license}}{{{translate license}}}{{else}}<span class="default_detail_field">---</span>{{/if}}</span>
					<span class="glyphicon glyphicon glyphicon-info-sign tab_item" aria-hidden="true" id="license_about"></span>
				</p>
				<p id="custom_license_description" class="license_description_text">{{license_description}}</p>
			</div>
			<div class="col-xs-4  text-center">
				<h4>{{formatMessage (intlGet 'messages.copyright_holder')}}</h4>
				<p class="detail_field wordwrap">{{#if copyright_owner}}{{copyright_owner}}{{else}}<span class="default_detail_field">---</span>{{/if}}</p>
			</div>
		</div>
		<hr/>
		<br/>
		<br/>
		<h4>{{formatMessage (intlGet 'messages.role_visibility')}}</h4>
		<span id="role_detail_field">{{#if role}}{{{translate role}}}{{else}}<span class="default_detail_field">---</span>{{/if}}</span>
		<span class="glyphicon glyphicon glyphicon-info-sign tab_item" aria-hidden="true" id="visibility_about"></span>
		<br/>
		<br/>
	{{/if}}
	{{#if node}}
		<h4>{{formatMessage (intlGet 'messages.description')}}</h4>
		<p class="detail_field">{{#if node.description}}{{node.description}}{{else}}<span class="default_detail_field">---</span>{{/if}}</p>
		<hr/>
	{{/if}}
	<div class="ui-widget" id="tag_area_wrapper">
		<h4>{{formatMessage (intlGet 'messages.tags')}}</h4>
		<div class="container-fluid">
			<p class="detail_field" id="tag_default_detail_field"><span class="default_detail_field">---</span></p>
			<div class="row view_only_tags" id="tag_area"></div>
		</div>
	</div>
{{/if}}
<div class="input-tab-control tab_item" data-next="#copy_button"></div>
