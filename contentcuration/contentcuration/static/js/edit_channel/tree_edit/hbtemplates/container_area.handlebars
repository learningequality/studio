<div id={{#if is_clipboard}}"clipboard"{{else}}{{#if edit}}"edit"{{else}}"preview"{{/if}}{{/if}}>
	<nav id="button_bar">
		{{#if staging}}
		<a href="/channels/{{channel.id}}/{{#if view_only}}view{{else}}edit{{/if}}">
		<div class="nav-button-container">
			<div class="nav-button disable-on-edit"><i class="material-icons">arrow_back</i></div>
			<a class="nav-label review_button disable-on-edit">{{formatMessage (intlGet 'messages.back')}}</a>
		</div></a>
		{{/if}}
		<div id="disable-none-selected-wrapper">
			{{#if edit}}
				<div class="nav-button-container">
					<div class="nav-button edit_button disable-on-edit disable-none-selected" title="{{formatMessage (intlGet 'messages.edit')}}"><i class="material-icons">mode_edit</i></div>
					<a class="nav-label edit_button disable-on-edit disable-none-selected" title="{{formatMessage (intlGet 'messages.edit')}}">{{formatMessage (intlGet 'messages.edit')}}</a>
				</div>
			{{else}}
				<div class="nav-button-container">
					<div class="nav-button edit_button disable-on-edit disable-none-selected" title="{{formatMessage (intlGet 'messages.view')}}"><i class="material-icons">pageview</i></div>
					<a class="nav-label edit_button disable-on-edit disable-none-selected" title="{{formatMessage (intlGet 'messages.view')}}">{{formatMessage (intlGet 'messages.view')}}</a>
				</div>
			{{/if}}
			{{#unless staging}}
				<div class="nav-button-container">
					<div class="nav-button copy_button disable-on-edit disable-none-selected" title="{{formatMessage (intlGet 'messages.copy')}}"><i class="material-icons">content_paste</i></div>
					<a class="nav-label copy_button disable-on-edit disable-none-selected" title="{{formatMessage (intlGet 'messages.copy')}}">{{formatMessage (intlGet 'messages.copy')}}</a>
				</div>
			{{/unless}}
			{{#if edit}}
				<div class="nav-button-container">
					<div class="nav-button move_button disable-on-edit disable-none-selected" title="{{formatMessage (intlGet 'messages.move')}}"><i class="material-icons">open_with</i></div>
					<a class="nav-label move_button disable-on-edit disable-none-selected" title="{{formatMessage (intlGet 'messages.move')}}">{{formatMessage (intlGet 'messages.move')}}</a>
				</div>
				<div class="nav-button-container">
					<div class="nav-button delete_button disable-on-edit disable-none-selected" title="{{formatMessage (intlGet 'messages.delete')}}"><i class="material-icons">clear</i></div>
					<a class="nav-label delete_button disable-on-edit disable-none-selected" title="{{formatMessage (intlGet 'messages.delete')}}">{{formatMessage (intlGet 'messages.delete')}}</a>
				</div>
			{{/if}}
		</div>
		{{#if edit}}
			<div class="nav-button-container button_drop">
				<div class="nav-button archive_button disable-on-edit" title="{{formatMessage (intlGet 'messages.trash')}}"><i class="material-icons">delete</i></div>
				<a class="nav-label archive_button disable-on-edit" title="{{formatMessage (intlGet 'messages.trash')}}">{{formatMessage (intlGet 'messages.trash')}}</a>
			</div>
			<div class="nav-button-container" title="{{formatMessage (intlGet 'messages.sync_title')}}">
				<div class="nav-button sync_button disable-on-edit" title="{{formatMessage (intlGet 'messages.sync')}}"><i class="material-icons">sync</i></div>
				<a class="nav-label sync_button disable-on-edit" title="{{formatMessage (intlGet 'messages.sync')}}">{{formatMessage (intlGet 'messages.sync')}}</a>
			</div>
		{{/if}}
		{{#if show_invite}}
		<div class="nav-button-container">
			<div class="nav-button permissions_button disable-on-edit" title="{{formatMessage (intlGet 'messages.invite')}}"><i class="material-icons">people</i></div>
			<a class="nav-label permissions_button disable-on-edit" title="{{formatMessage (intlGet 'messages.invite')}}">{{formatMessage (intlGet 'messages.invite')}}</a>
		</div>
		{{/if}}
		{{#if channel.ricecooker_version}}
			{{#unless view_only}}
				{{#unless staging}}
					{{#if channel.staging_tree}}<a href="/channels/{{channel.id}}/staging">{{/if}}
					<div class="nav-button-container" {{#unless channel.staging_tree}}title="{{formatMessage (intlGet 'messages.no_updates')}}" disabled{{/unless}}>
						<div class="nav-button review_button disable-on-edit {{#unless channel.staging_tree}}disabled{{/unless}}" title="{{formatMessage (intlGet 'messages.review')}}"><i class="material-icons">announcement</i></div>
						<a class="nav-label review_button disable-on-edit {{#unless channel.staging_tree}}disabled{{/unless}}" title="{{formatMessage (intlGet 'messages.review')}}">{{formatMessage (intlGet 'messages.review')}}</a>
					</div>
					{{#if channel.staging_tree}}</a>{{/if}}
				{{/unless}}
			{{/unless}}
		{{/if}}
		{{#if staging}}
			<div class="nav-button-container" title="{{formatMessage (intlGet 'messages.summary_title')}}">
				<div class="nav-button stats_button disable-on-edit"><i class="material-icons">view_list</i></div>
				<a class="nav-label stats_button disable-on-edit">{{formatMessage (intlGet 'messages.summary')}}</a>
			</div>
		{{/if}}
		<div class="hide-details-container">
			<input type="checkbox" id="hide_details_checkbox"/>
			<label for="hide_details_checkbox">{{formatMessage (intlGet 'messages.hide_details')}}</label>
		</div>
	</nav>
	{{#unless view_only}}
		{{#if channel.ricecooker_version}}
			<div id="ricecooker_header">
				{{#if staging}}
					{{formatMessage (intlGet 'messages.staging_text')}} <b><a class="approve_channel">{{formatMessage (intlGet 'messages.deploy_text')}}</a></b>
				{{else}}
					{{formatMessage (intlGet 'messages.ricecooker_text')}} <b><a href="https://github.com/learningequality/ricecooker" target="_blank">Ricecooker</a></b> v{{channel.ricecooker_version}} (@ {{channel.created}}). {{#if channel.staging_tree}}<b><a href="/channels/{{channel.id}}/staging">{{formatMessage (intlGet 'messages.updates_available')}}</a></b>{{else}}{{formatMessage (intlGet 'messages.updates_not_available')}}{{/if}}
				{{/if}}
			</div>
		{{/if}}
	{{/unless}}
	<div id="container-wrapper">
		<ul id="container_area" class="list-unstyled">
		</ul>
	</div>
</div>
