	<div id="queue_content">
		{{#if is_clipboard}}
			<div class="row clipboard_options text-center">
				<div class="toolbar-button">
					<div class="add_items"><span class="glyphicon glyphicon-plus-sign"></span></div>
					<a class="add_items">Add</a>
				</div>
				<div class="toolbar-button">
					<div class="edit_items"><span class="glyphicon glyphicon-pencil"></span></div>
					<a class="edit_items">Edit</a>
				</div>
				<!--<a class="col-xs-3 move_selected_queue btn btn-option construction">Move<br/>Selected</a>-->
