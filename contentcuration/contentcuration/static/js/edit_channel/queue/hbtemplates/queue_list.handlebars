					<a class="delete_items">Delete</a>
				</div>
			</div>
			<div id="clipboard_list" class="list_content">
		{{else}}
			<div class="row trash_options text-center">
				<div class="toolbar-button">
					<div class="move_trash"><span class="glyphicon glyphicon-share-alt"></span></div>
					<a class="move_trash">Restore</a>
				</div>
				<div class="toolbar-button">
					<div class="delete_items"><span class="glyphicon glyphicon-remove-circle"></span></div>
					<a class="delete_items">Clear</a>
				</div>
			</div>
			<div id = "trash_list" class="list_content">
		{{/if}}
			<input type="checkbox" class="select_all" id="select_all_check"/>
			<label for="select_all_check">Select All</label>
	{{/if}}
				
			<ul class="list-unstyled content-list" id="list_for_{{id}}">
				{{#unless content_list}}
					<li class="default-item"><h5>No items found.</h5></li>
				{{/unless}}
			</ul>
